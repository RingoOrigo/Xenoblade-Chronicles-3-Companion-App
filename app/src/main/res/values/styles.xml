<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Text styles  -->
    <style name="custom_app_text">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/flute_red</item>
    </style>
    <style name="name_header_text" parent = "custom_app_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="sub_heading_24_sp" parent = "custom_app_text">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="sub_heading_20_sp" parent = "custom_app_text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="info_text_16sp" parent = "custom_app_text">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="about_text" parent = "custom_app_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="about_heading" parent = "custom_app_text">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="bg_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="tint">@color/bg_black_tint</item>
        <item name="tintMode">src_atop</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>