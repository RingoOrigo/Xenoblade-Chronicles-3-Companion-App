<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/character_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/helvetica_neue"
        app:layout_constraintStart_toEndOf="@+id/character_image"
        app:layout_constraintTop_toTopOf="@+id/character_image"
        tools:text="Noah" />

    <ImageView
        android:id="@+id/ouroboros_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/character_name_text"
        app:srcCompat="@drawable/ouroboros" />

    <ImageView
        android:id="@+id/moebius_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/ouroboros_logo"
        app:layout_constraintEnd_toEndOf="@+id/ouroboros_logo"
        app:layout_constraintStart_toStartOf="@+id/ouroboros_logo"
        app:layout_constraintTop_toTopOf="@+id/ouroboros_logo"
        app:srcCompat="@drawable/moebius" />
<!--    put in logos for Keves and Agnus affiliation as well. Would be neat for heroes.-->
</androidx.constraintlayout.widget.ConstraintLayout>